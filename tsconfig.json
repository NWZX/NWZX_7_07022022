{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "typedocOptions": {
    "entryPoints": [
      "src"
    ],
    "entryPointStrategy": "expand",
    "out": "docs",
  },
  "exclude": [
    "node_modules",
    "docs",
    "assets",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "include": [
    "src",
    "index.d.ts"
  ]
}
